<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/DarkSlateBlue">

    <TextView android:id="@+id/category_color"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/Firebrick"/>

    <ImageView android:id="@+id/category_border"
        android:layout_marginStart="8dp"
        android:src="@drawable/icon_border_black"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/category_icon"
        android:src="@drawable/alert"
        android:layout_marginStart="-34dp"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="center_vertical" />

    <TextView android:id="@+id/category_name"
        android:layout_marginStart="12dp"
        android:text="Category Name"
        android:textSize="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <Button android:id="@+id/category_edit"
        android:layout_gravity="center_vertical"
        android:layout_height="42dp"
        android:layout_width="108dp"
        android:layout_marginEnd="8dp"
        android:text="Edit"
        android:textColor="@color/EerieBlack"
        android:theme="@style/AppTheme.NoActionBar"/>

</LinearLayout>