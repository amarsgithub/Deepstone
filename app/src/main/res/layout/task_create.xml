<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/Primary"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <ImageView
                android:id="@+id/task_create_icon"
                android:layout_marginStart="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/book_open_page_variant"
                android:layout_centerVertical="true" />

            <TextView
                android:text="Create Task"
                android:textSize="18dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/task_create_icon"
                android:textColor="@color/Accent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/date"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginEnd="64dp"
                android:textColor="@color/Accent"
                android:layout_height="match_parent"
                android:text="Jan. 21"
                android:textSize="18dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <EditText android:id="@+id/task_create_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/Platinum"
                android:ems="10"
                android:hint="Task Name"
                android:textColorHint="@color/MetallicSilver" />

            <EditText android:id="@+id/task_create_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/Platinum"
                android:ems="10"
                android:textColorHint="@color/MetallicSilver"
                android:hint="Task Description" />

            <LinearLayout
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/MetallicSilver"/>

            <RelativeLayout
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Category:"
                    android:textSize="18dp"
                    android:textColor="@color/MetallicSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner android:id="@+id/task_create_categories"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/MetallicSilver"/>

            <RelativeLayout
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Difficulty:"
                    android:textSize="18dp"
                    android:id="@+id/difficultyText"
                    android:textColor="@color/MetallicSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:max="100"
                    android:layout_alignParentEnd="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/difficultyBar" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Urgency:"
                    android:textSize="18dp"
                    android:id="@+id/urgencyText"
                    android:textColor="@color/MetallicSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:max="100"
                    android:layout_alignParentEnd="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/urgencyBar" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/task_create_time"
                    android:text="Time:"
                    android:textSize="18dp"
                    android:textColor="@color/MetallicSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:layout_alignParentEnd="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeBar" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/MetallicSilver"/>

            <Button android:id="@+id/task_create_button"
                android:layout_marginTop="8dp"
                android:text="Create Task"
                android:textColor="@color/EerieBlack"
                android:layout_width="match_parent"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>