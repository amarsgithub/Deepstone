<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:id="@+id/physAssignment"
    android:visibility="visible"
    android:background="@color/DarkSlateBlue">

    <TextView android:id="@+id/task_color"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/Night"/>

    <ImageView
        android:layout_marginStart="8dp"
        android:src="@drawable/icon_border_black"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/task_icon"
        android:src="@drawable/magnet_on"
        android:layout_marginStart="-32dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical" />

    <TextView android:id="@+id/task_desc"
        android:layout_marginStart="12dp"
        android:text="Desc"
        android:textSize="24dp"
        android:textColor="@color/Platinum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <TextView android:id="@+id/task_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/Platinum"
        android:layout_marginStart="8dp"
        android:text="EXP" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/Platinum"
        android:text=" XP" />

    <CheckBox
        android:id="@+id/task_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"/>

</LinearLayout>